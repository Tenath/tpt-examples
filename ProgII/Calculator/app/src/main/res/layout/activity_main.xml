<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="132dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/calcValue"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="viewEnd"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnMC"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="MC"
                />
            <Button
                android:id="@+id/btnMR"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="MR"
                />
            <Button
                android:id="@+id/btnMS"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="MS"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnReset"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="C"
                />
            <Button
                android:id="@+id/btnSign"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="+/-"
                />
            <Button
                android:id="@+id/btnModulo"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="%"
                />
            <Button
                android:id="@+id/btnDivide"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="/"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn1"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="1"
                />
            <Button
                android:id="@+id/btn2"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="2"
                />
            <Button
                android:id="@+id/btn3"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="3"
                />
            <Button
                android:id="@+id/btnMul"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="*"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn4"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="4"
                />
            <Button
                android:id="@+id/btn5"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="5"
                />
            <Button
                android:id="@+id/btn6"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="6"
                />
            <Button
                android:id="@+id/btnSub"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="-"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn7"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="7"
                />
            <Button
                android:id="@+id/btn8"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="8"
                />
            <Button
                android:id="@+id/btn9"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="9"
                />
            <Button
                android:id="@+id/btnAdd"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="+"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn0"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="0"
                />
            <Button
                android:id="@+id/btnBackspace"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="&lt;-"
                />
            <Button
                android:id="@+id/btnDot"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="."
                />
            <Button
                android:id="@+id/btnEquals"
                android:onClick="onBtnClick"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="="
                />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>