@model MvcBooks.Models.Book
@{
    ViewData["Title"] = "Book detail";
}
@if (Model != null)
{
    <table class="table">
        <tr>
            <td>ID</td>
            <td>@Model.ID</td>
        </tr>

        <tr>
            <td>Title</td>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <td>Publisher</td>
            <td>@Model.Publisher</td>
        </tr>
    </table>
}
else
{
    <div>Book not found!</div>
}
