@using MvcBooks.Models;
@{
    List<Student> students = ViewData["students"] as List<Student>;
}
<!doctype HTML>
<html>
<head>
    <title>Student table</title>
    <style>
        table,th,td {
            border: solid 1px black;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>#</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Class</th>
        </tr>
        @{ int ctr = 1; }
        @foreach(Student s in students)
        {
            <tr>
                <td>@ctr</td>
                <td>@s.FirstName</td>
                <td>@s.LastName</td>
                <td>@s.Class</td>
                @{ ctr++; }
            </tr>
        }
    </table>
</body>
</html>